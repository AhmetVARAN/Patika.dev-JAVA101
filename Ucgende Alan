import java.util.Scanner;

public class Hipotenüs {
	public static void main(String[] args) {
		int a,b,c;
		Scanner input=new Scanner(System.in);
		
		System.out.print("Lütfen üçgenin 1. uzunluğunu girin:");
		a=input.nextInt();
		
		System.out.print("Lütfen üçgenin 2. uzunluğunu girin:");
		b=input.nextInt();
		
		System.out.print("Lütfen üçgenin 3. uzunluğunu girin:");
		c=input.nextInt();
		
		int u=(a+b+c)/2;
		int alan=u*(u-a)*(u-b)*(u-c);
		
		System.out.print("Üçgenin alanı:"+alan);
	}
}
